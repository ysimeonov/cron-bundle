<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Shapecode\Bundle\CronBundle\Repository\CronJobRepository"
            name="Shapecode\Bundle\CronBundle\Entity\CronJob" table="cron_job">
        <id name="id" type="integer" />
        <field name="command" type="string" column="command"/>
        <field name="arguments" type="string" column="arguments"/>
        <field name="description" type="string" column="description"/>
        <field name="runningInstances" type="integer" column="running_instances">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="maxInstances" type="integer" column="max_instances">
            <options>
                <option name="default">1</option>
            </options>
        </field>
        <field name="number" type="integer" column="number">
            <options>
                <option name="default">1</option>
            </options>
        </field>
        <field name="period" type="string" column="period"/>
        <field name="lastUse" type="datetime" column="last_use" nullable="true"/>
        <field name="nextRun" type="datetime" column="next_run"/>
        <field name="enable" type="boolean" column="enable">
            <options>
                <option name="default">1</option>
            </options>
        </field>
        <field name="createdAt" type="datetime" column="created_at"/>
        <field name="updatedAt" type="datetime" column="updated_at"/>
        <one-to-many field="results" target-entity="Shapecode\Bundle\CronBundle\Entity\CronJobResult"
                     mapped-by="cronJob" orphan-removal="true" fetch="LAZY">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>